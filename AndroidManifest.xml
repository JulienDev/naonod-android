<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.naonod"
    android:versionCode="1"
    android:versionName="0.5" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- <uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION" /> -->

    <application
        android:name="fr.naonod.application.NaonodApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Naonod" >
        <uses-library android:name="com.google.android.maps" />

        <activity
            android:name="fr.naonod.view.SplashscreenActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="fr.naonod.view.POISearchActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="fr.naonod.view.POIMapActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="fr.naonod.view.POIListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="fr.naonod.view.POIActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="fr.naonod.view.AboutActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>